<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background">

    <LinearLayout
        android:id="@id/show_step_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_above="@id/show_daily"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@id/btn_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip">

            <Button
                android:id="@id/start"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:onClick="onClick"
                android:padding="5dip"
                android:text="@string/start"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@id/stop"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:onClick="onClick"
                android:padding="5dip"
                android:text="@string/pause"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/show_step_row"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip">

        <TextView
            style="@style/small_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/use_time"
            android:textSize="25dp" />

        <TextView
            android:id="@id/timer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="6.03"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8.56"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:stretchColumns="1">

            <TableRow
                android:id="@+id/hide1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/small_text_style"
                    android:text="@string/distance"
                    android:textSize="21dp" />

                <TextView
                    android:id="@+id/distance"
                    style="@style/small_text_style"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:textSize="21dp" />

                <TextView
                    style="@style/small_text_style"
                    android:layout_column="3"
                    android:gravity="right"
                    android:text="m.        " />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/small_text_style"
                    android:text=" calories :"
                    android:textSize="21dp" />

                <TextView
                    android:id="@id/calories"
                    style="@style/small_text_style"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:textSize="21dp" />

                <TextView
                    style="@style/small_text_style"
                    android:layout_column="3"
                    android:gravity="right"
                    android:text="cal.      " />
            </TableRow>

            <TableRow
                android:id="@+id/hide2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/small_text_style"
                    android:layout_column="2"
                    android:gravity="right"
                    android:text="              " />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/small_text_style"
                    android:text="speed :"
                    android:textSize="50dp"
                    android:layout_column="0" />

                <TextView
                    android:id="@id/velocity"
                    style="@style/small_text_style"
                    android:gravity="right"
                    android:textSize="21dp" />

                <TextView
                    style="@style/small_text_style"
                    android:layout_column="3"
                    android:gravity="right"
                    android:text="km./hr." />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:id="@id/show_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"
        android:background="@drawable/shape"
        android:stretchColumns="5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="20dip">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Daily :"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@id/week_day"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@id/date"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@id/save"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:onClick="onClick"
                android:padding="5dip"
                android:text="@string/save"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>


</RelativeLayout>