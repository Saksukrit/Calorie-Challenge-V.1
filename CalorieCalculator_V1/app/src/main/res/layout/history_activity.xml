<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCFF66"
        android:padding="10dp"
        android:layout_weight="0.26">

        <TextView
            android:id="@+id/AcName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="delete" />

        <TextView
            android:id="@+id/date"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:text="23/12/2015, 16:30"
            android:textSize="20dp" />

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/burn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/burn" />


        <TextView
            android:id="@+id/textCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/burn"
            android:layout_toRightOf="@+id/burn"
            android:text="Calories : "
            android:textSize="27dp" />

        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="368"
            android:textSize="27dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textCalories"
            android:layout_toEndOf="@+id/textCalories" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kcal."
            android:textSize="27dp"
            android:layout_alignTop="@+id/calories"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/distance"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/distance" />


        <TextView
            android:id="@+id/textDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/distance"
            android:layout_toRightOf="@+id/distance"
            android:text="Distance : "
            android:textSize="27dp" />

        <TextView
            android:id="@+id/distances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.6"
            android:textSize="27dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textDistance"
            android:layout_toEndOf="@+id/textDistance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m."
            android:textSize="27dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/duration"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/duration" />


        <TextView
            android:id="@+id/textDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/duration"
            android:layout_toRightOf="@+id/duration"
            android:text="Duration : "
            android:textSize="27dp" />

        <TextView
            android:id="@+id/durations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textDuration"
            android:layout_toRightOf="@+id/textDuration"
            android:text="00:30:00"
            android:textSize="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hr."
            android:textSize="27dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/speed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/speed" />


        <TextView
            android:id="@+id/textStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/speed"
            android:layout_toRightOf="@+id/speed"
            android:text="Speed : "
            android:textSize="27dp" />

        <TextView
            android:id="@+id/speeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textStep"
            android:layout_toRightOf="@+id/textStep"
            android:text="9.7"
            android:textSize="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km./hr."
            android:textSize="27dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_weight="0.32">


        <TextView
            android:id="@+id/textStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step : "
            android:textSize="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/step"
            android:layout_toStartOf="@+id/step" />

        <TextView
            android:id="@+id/step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.7"
            android:textSize="55dp"
            android:layout_marginRight="67dp"
            android:layout_marginEnd="67dp"
            android:layout_alignTop="@+id/textStep"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</LinearLayout>