<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="#CCFF66"
        android:padding="10dp">

        <TextView
            android:id="@+id/cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1800"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/cal"
            android:layout_gravity="right"
            android:text="delete" />

        <TextView
            android:id="@+id/date"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cal"
            android:layout_gravity="center_horizontal|bottom"
            android:text="23/12/2015"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cal"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/cal"
            android:layout_toRightOf="@+id/cal"
            android:text="   calories"
            android:textSize="20dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:padding="10dp">

        <ListView
            android:id="@+id/listHisEating"
            android:layout_width="wrap_content"
            android:layout_height="300dp"></ListView>


    </RelativeLayout>


</LinearLayout>